<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">

    <!-- CARD -->
    <div class="col-md-6">
      <div class="card shadow-lg">
        <img 
          src="<%= listing.image %>" 
          class="card-img-top show-img" 
          alt="listing_image"
          style="height: 300px; object-fit: cover;"
        >

        <div class="card-body">
          <h4 class="card-title mb-3"><%= listing.title %></h4>

          <p class="card-text">
            <%= listing.description %>
          </p>

          <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><b>Price:</b> ‚Çπ<%= listing.price %> / night</li>
            <li class="list-group-item"><b>Location:</b> <%= listing.location %></li>
            <li class="list-group-item"><b>Country:</b> <%= listing.country %></li>
          </ul>

          <!-- BUTTONS -->
          <div class="d-flex justify-content-between">
            <a 
              href="/listings/<%= listing._id %>/edit" 
              class="btn btn-outline-dark"
            >
              ‚úèÔ∏è Edit
            </a>

            <form 
              method="POST" 
              action="/listings/<%= listing._id %>?_method=DELETE"
            >
              <button class="btn btn-danger">
                üóë Delete
              </button>
            </form>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
